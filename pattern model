import java.util.*;
public class Pattern {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        for(int i=0;i<=4;i++){
            for(int j=0;j<=i;j++){
                System.out.print(n++ +" ");
            }
            System.out.println();
        }
    }
}
